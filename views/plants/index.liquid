{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">All plants</h2>
    <div class="row">
      {% for plant in plants %}
        <div class="card" style="width: 18rem;">
          <h5 class="card-header">{{ plant.name }}</h5>
          <div class="card-body">
            <h5 class="card-title">
              Ready?: {{ plant.ready }}
            </h5>
            <p class="card-text">
              Body: {{ plant.body }}
            </p>
            <p class="card-text">
              Amount: {{ plant.amount }}
            </p>
            <a href="/plants/{{ plant.id }}" class="btn btn-info">
              View {{ plant.title }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}